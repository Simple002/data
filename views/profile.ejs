<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
</head>
<body>
    <h1>Hello  <%= name %>!</h1>
    <button id="logout">Log Out</button>

    <script>
        document.getElementById("logout").addEventListener("click",() => {
            fetch("/logout",{
                method:"GET",
                credentials:"include"
            })
            .then(res => res.json())
            .then(data => {
                if(data.logOut_status){
                    window.location.href = '/login'
                }
            })
        })
    </script>
</body>
</html>